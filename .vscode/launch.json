{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Docker C++ Debug",
      "type": "cppdbg",
      "request": "launch",
      "program": "/app/your_executable",  // Update with the path to your executable
      "args": [],
      "stopAtEntry": false,
      "cwd": "/app",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build",
    }
  ]
}
